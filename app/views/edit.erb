<div class=".container-fluid text-center">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <form action="/robots/<%= @robot.id %>" method="post">
        <h1>Edit</h1>
        <input type="hidden" name="_method" value="PUT"/>
        <label for="name">Name</label><br/>
        <input type="text" name="robot[name]" value="<%= @robot.name %>"/><br/>
        <label for="city">City</label><br/>
        <input type="text" name="robot[city]" value="<%= @robot.city %>"/><br/>
        <label for="state">State</label><br/>
        <input type="text" name="robot[state]" value="<%= @robot.state %>"/><br/>
        <label for="department">Department</label><br/>
        <input type="text" name="robot[department]" value="<%= @robot.department %>"/><br/>
        <input type="submit"/><br/>
      </form>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
