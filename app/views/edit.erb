<h2>Edit Robot</h2>

<form action ='/robots/<%= @robot.id %>' method = 'POST'>
  <input type = 'hidden' name ="_method" value="PUT">
  <label>Name:</label>
  <input type ='text' name = 'robot[name]' value = '<%= @robot.name %>'><br>
  <label>City:</label>
  <input type ='text' name = 'robot[city]' value = '<%= @robot.city %>'><br>
  <label>State:</label>
  <input type ='text' name = 'robot[state]' value = '<%= @robot.state %>'><br>
  <label>Department:</label>
  <input type ='text' name = 'robot[department]' value = '<%= @robot.department %>'><br>
  <input type ='submit'>
</form>
