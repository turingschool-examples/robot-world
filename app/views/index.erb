<div class="index-page">
  
<% @robots.each do |robot| %>
<div class="robot">
  <img class="robo-pic "src="http://www.robohash.org/<%= robot.name %>"><br>
  <h2 class"robo-names"><a href="/robots/<%= robot.id %>"><%= robot.name %></a></h2>
  <!-- <h1><%= robot.name %></h3> -->
  <p><%= robot.city %></p>
  <p><%= robot.state %></p>
  <p><%= robot.department %></p>
  <button><a href="/robots/<%= robot.id %>">Edit</a></button>
  <form action="/robots/<%= robot.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
</div>
<% end %>
</div>
